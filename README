javascript function engine

example : 

 
     methods : {
 
         test : {
             helloWorld  : {
                     shadowAsk   : 'Please specify an element by id:',
                     isElementValid : '&reply',
                     set : {'message':'Hello World!'},
                     print   : [{'message' : '&message'},{'destination' : '&destination'}],
                     autoClean : '&message',
                     autoClean   : '&destination'
             },
         },
         chat : {
             newmessage : {
                     display  :  '&friendlist',
                     "select*"   :  'friend',
                     compose :   'message',
             }
         }
     }
 
