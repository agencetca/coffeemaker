Coffeemaker.core.load.action = function () {


    var system = Coffeemaker.core.system;
    var transmit = Coffeemaker.core.transmission;
    var utils = Coffeemaker.core.utilities;
    var load = Coffeemaker.core.load;

    var cbk;
    var bool;
    var result;
    var args = utils.array.copy(arguments);
    var base = args.shift();
    var path = base.split('.').join('/').split('/');
    var action = path.pop();
    

    if (utils.check.isBool(utils.array.get(args,'last'))) {
        bool = args.pop();
    } else {
        bool = false;
        result = false;
    }

//    if (bool === false) {
//        result = args.pop();
//    }
    
    cbk = args.pop();


    load.handle.transmitter('actions',path, function () {
        
            try {
                system.action(path+'/'+action,args,cbk,bool)
            }catch(e) {
                console.log(e);
            }
        
    });


}
