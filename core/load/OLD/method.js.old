Coffeemaker.core.load.method = function () {


    var system = Coffeemaker.core.system;
    var utils = Coffeemaker.core.utilities;
    var fault = Coffeemaker.core.fault;
    var load = Coffeemaker.core.load;

    var cbk;
    var bool;
    var result;
    var args = utils.array.copy(arguments);
    var base = args.shift();
    var path = base.split('.').join('/').split('/');
    var action = path.pop();
    path = path.join('/');
    

    if (utils.check.isBool(utils.array.get(args,'last'))) {
        bool = args.pop();
    } else {
        bool = false;
        result = false;
    }

    if (bool === false) {
        result = args.pop();
    }
    
    cbk = args.pop();


    load.handle.transmitter('methods',path, function () {
        
            try {
                system.method(path+'/'+action,args,cbk,bool);
            }catch(e) {
                console.log(e);
            }
        
    });



}
