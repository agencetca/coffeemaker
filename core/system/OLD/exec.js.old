Coffeemaker.core.system.exec = function (object,callback,value) {


    var utils = Coffeemaker.core.utilities;
    var system = Coffeemaker.core.system;
    var monitor = Coffeemaker.core.monitor;
    var result;
    var task;
    var date;
    var args = [];
    
        try {

            date = Date.now();
            if (! object.rationale) object.rationale = 'R-'+date; 
            if (! object.process) object.process = 'P-'+date; 
            if (! object.method) object.method = 'M-'+date; 
            if (! object.action) object.action = 'A-'+date; 
            task = '['+object.rationale+']'+'['+object.process+']'+'['+object.method+']'+'['+object.action+']'
            
            monitor.log.task.start(task);

            utils.loop.array(object.args, function(a,b,c) {
                args.push(b);
            });

            utils.loop.array(args, function(a,b,c) {
                if ( b === '&' ) c[a] = value;
            });

            console.log(object)
            if (callback) { args.push(callback); }
            result = object.payload.apply('', args); 
            monitor.log.task.success(task);

        } catch (e) {

            monitor.log.task.error(task);
            console.log(e);

        } finally {

            return result;

        }

}
